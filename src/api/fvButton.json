      "description": "Danger theme"
    },
    {
      "name": ".fv-warning",
      "description": "Warning theme"
    },
    {
      "name": ".fv-info",
      "description": "Info theme"
    },
    {
      "name": ".fv-size-xs",
      "description": "XSmall size"
    },
    {
      "name": ".fv-size-sm",
      "description": "Small size"
    },
    {
      "name": ".fv-size-md",
      "description": "Medium size (actived by default)"
    },
    {
      "name": ".fv-size-lg",
      "description": "Large size"
    },
    {
      "name": ".fv-size-xl",
      "description": "XLarge size"
    }
